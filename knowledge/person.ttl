#
# Semantic information about a Person
#
# Include knorke.ttl and foaf-0.1.ttl for more information.
#
@prefix : <https://raw.githubusercontent.com/k00ni/knorke/master/knowledge/person.ttl#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix kno: <https://raw.githubusercontent.com/k00ni/knorke/master/knowledge/knorke.ttl#> .
@prefix kno-person: <https://raw.githubusercontent.com/k00ni/knorke/master/knowledge/person.ttl#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<> a owl:Ontology .

:Person rdfs:subClassOf foaf:Person ;
    kno:hasProperty :age ;
    kno:hasProperty :firstname .

#
# Age
#
:age rdfs:subPropertyOf foaf:age ;
    rdfs:label "Alter"@de ;
    rdfs:label "age"@en ;
    kno:restrictionHasDatatype "number"^^xsd:string ;
    kno:restrictionMinimumNumber "1"^^xsd:integer ;
    kno:restrictionMaximumNumber "120"^^xsd:integer .

#
# Firstname
#
:firstname rdfs:subPropertyOf foaf:firstName ;
    rdfs:label "Vorname"@de ;
    rdfs:label "firstname"@en ;
    kno:restrictionHasDatatype "string"^^xsd:string .
